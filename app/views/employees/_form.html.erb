<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |message|%>
        <h2><%= message%></h2>
    <% end%>
<% end%>



<%= form_for @employee do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %>

<%= f.label :last_name %>
<%= f.text_field :last_name %>

<%= f.label :alias %>
<%= f.text_field :alias %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :office %>
<%= f.text_field :office %><br>

<%= f.label :dog_id, "Select this employee's dog:"%>
<%= f.collection_select :dog_id, Dog.all, :id, :name %>

<%= f.submit %>
<% end%>